{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "FastAPI (uvicorn reload)",
      "type": "debugpy",
      "request": "launch",
      "module": "uvicorn",
      "args": [
        "app:app",
        "--host",
        "0.0.0.0",
        "--port",
        "8000",
        "--reload",
        "--log-level",
        "debug"
      ],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "envFile": "${workspaceFolder}/.env",
      "subProcess": true,
      "justMyCode": false
    }
  ]
}
